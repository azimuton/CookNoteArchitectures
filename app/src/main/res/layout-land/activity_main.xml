<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlTabMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E4F6D0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="#05C50C"
        app:tabMode="auto"
        app:tabSelectedTextColor="#09650D"
        app:tabTextColor="#04E10D">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/meat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мясо и рыба" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/soup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Первые блюда" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/zukuski"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Закуски" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/salad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Салаты" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/vipechka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выпечка" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/deserti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Десерты" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/sousi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Соусы" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/solenia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Соленья" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpMainPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlTabMain" />

</androidx.constraintlayout.widget.ConstraintLayout>